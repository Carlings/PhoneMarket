@model List<Phone>

<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Company</th>
                <th scope="col">Price</th>
                <th scope="col">Orders</th>

                <th scope="col">Order now</th>
            </tr>
        </thead>
        @foreach(var item in Model)
        {
            <tbody>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Company</td>
                <td>@Math.Round(item.Price,3)</td>
                <td>@item.Orders</td>
                <td><a asp-action="MakeOrder" asp-route-id="@item.Id" class="btn btn-outline-info p-2" style="height:40px weight:100px"></a></td>
            </tbody>
        }
    </table>
</div>
